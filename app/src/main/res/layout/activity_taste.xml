<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".TasteActivity"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/list_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taste_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taste_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taste_gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <View
        android:id="@+id/taste_v_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_tb"
        app:layout_constraintBottom_toBottomOf="@id/taste_gl_1"
        android:background="#FFCCCC"/>

    <ImageView
        android:id="@+id/taste_iv_text1"
        android:layout_width="450dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/taste_gl_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_tb"
        app:srcCompat="@drawable/taste_text1" />

    <View
        android:id="@+id/taste_v_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/taste_gl_3"
        app:layout_constraintTop_toTopOf="@id/taste_gl_1"
        app:layout_constraintBottom_toBottomOf="@id/taste_gl_2"
        android:background="#DAE3F3"/>

    <ImageView
        android:id="@+id/taste_iv_text2"
        android:paddingTop="40dp"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/taste_gl_3"
        app:layout_constraintTop_toTopOf="@id/taste_gl_1"
        app:layout_constraintBottom_toBottomOf="@id/taste_gl_2"
        app:srcCompat="@drawable/taste_text2"/>

    <View
        android:id="@+id/taste_v_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/taste_gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/taste_gl_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FBE5D6"/>

    <ImageView
        android:id="@+id/taste_iv_text3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/taste_gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/taste_gl_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/taste_text3"/>

    <View
        android:id="@+id/taste_v_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/taste_gl_3"
        app:layout_constraintTop_toTopOf="@id/taste_gl_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#AFABAB"/>

    <ImageView
        android:id="@+id/taste_iv_text4"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/taste_gl_3"
        app:layout_constraintTop_toTopOf="@id/taste_gl_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/taste_text4"/>


</androidx.constraintlayout.widget.ConstraintLayout>